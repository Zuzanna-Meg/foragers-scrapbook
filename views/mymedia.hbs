<div class="container">
    <h1 class="text-center p-3" style="font-family: Garamond, serif">My Media</h1>
    <!--New Asset Box-->
    <div class="row align-items-start p-3">
        <div class="col-2"></div>

        <div class="col-8" style="text-align: left;">
            <p>
                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseForm"
                    aria-expanded="false" aria-controls="collapseForm">
                    Add Media
                </button>
            </p>

            <div class="collapse" id="collapseForm">
                <div class="card card-body">
                    <form style="font-size: 10pt;" id="newAssetForm">
                        <div class="mb-3">
                            <label for="FileName" class="form-label">File Name</label>
                            <input type="text" class="form-control" id="FileName">
                        </div>

                        <div class="mb-3">
                            <input type="hidden" class="form-control" id="userID" value={{user.sub}}>
                        </div>

                        <div class="mb-3">
                            <input type="hidden" class="form-control" id="userName" value={{user.nickname}}>
                        </div>

                        <div class="mb-3">
                            <label for="UpFile" class="form-label">File to Upload</label>
                            <input type="file" class="form-control" id="UpFile">
                        </div>

                        <button type="button" id="subNewForm" class="btn btn-primary">Submit</button> <br /><br />

                    </form>
                </div>
            </div>


        </div>

        <div class="col-2"></div>
    </div>


</div>

<div class="row align-items-start">
    <div class="col-2"></div>

    <div class="col-8 masonry-container" style="text-align: left;">

        <div id="MyMediaList">

            <h4>Error loading the media.</h4>

        </div>
    </div>

    <div class="col-2"></div>
</div>